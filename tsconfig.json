{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@kool-kool/kool-ui": ["src/index.ts"]
    },
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*", ".dumi/**/*", ".dumirc.ts", "svgr.d.ts", "docs"]
}
