{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "kool-ui": ["src"],
      "kool-ui/*": ["src/*", "*"]
    }
  },
  "lib": ["es2015", "dom"],
  "include": ["src/**/*", "typings.d.ts", ".dumi/**/*", ".dumirc.ts"],
  "exclude": ["node_modules"]
}
